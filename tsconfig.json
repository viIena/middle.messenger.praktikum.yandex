{
  "compilerOptions": {
    "target": "es6",
    // Нужно для плавного перехода
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
        "ES2021",
        "dom",
        "DOM.Iterable"
    ],
    "typeRoots": [
        "node_modules/@types",
        "@types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
